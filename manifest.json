{
    "name": "Youtoo",
    "version": "1.0",
    "manifest_version": 2,
    "content_security_policy": "script-src 'self'; object-src 'self'",
    "description": "ứng dụng lấy danh sách video mới nhất trên youtube.",
    "browser_action": {
       "default_icon": "img/icon.png",
       "default_title": "Youtoo",
       "default_popup":"html/popup.html"
    },
    "permissions": [
        "storage",
        "tabs",
        "activeTab",
        "http://*/*",
        "https://*/*",
        "<all_urls>"
    ],
    "web_accessible_resources": [
        "css/jquery-ui.min.css",
        "scripts/jquery.js",
        "scripts/jquery-ui.min.js",
        "img/icon.png",
        "img/bg.jpg"
    ],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "css": [
                "css/jquery-ui.min.css"
            ],
            "js": [
                "scripts/jquery.js",
                "scripts/jquery-ui.min.js"
            ]
        }
    ]
}